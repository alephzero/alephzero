---
BasedOnStyle:  Chromium
---
Language:                            Cpp
ColumnLimit:                         100

AllowShortFunctionsOnASingleLine:    Empty
AllowShortLambdasOnASingleLine:      Empty
AllowAllArgumentsOnNextLine:         false
BinPackArguments:                    false

IncludeBlocks:       Regroup
IncludeCategories:
  - Regex:           '^<a0/.*\.(h|hpp)>'
    Priority:        1
  - Regex:           '^<.*\.(h|hh|hpp)>'
    Priority:        2
  - Regex:           '^<.*'
    Priority:        3
  - Regex:           '.*'
    Priority:        4
SortIncludes: true
